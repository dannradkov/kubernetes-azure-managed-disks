{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "md-pod-standalone"
    },
    "spec": {
        "nodeSelector": {
            "kubernetes.io/hostname": "optionally-restrict-to-one-node-during-intial-retrial"
        },
        "containers": [
            {
                "image": "busybox",
                "name": "az-c-01",
                "command": [
                    "/bin/sh",
                    "-c",
                    "while true; do echo $(date) >> /mnt/manageddisk/outfile; sleep 1; done"
                ],
                "volumeMounts": [
                    {
                        "name": "managedisk01",
                        "mountPath": "/mnt/manageddisk"
                    }
                ]
            }
        ],
        "volumes": [
            {
                "name": "managedisk01",
                "azureManagedDisk": {
                    "diskName": "diskone",
                    "storageAccountType": "Premium_LRS",
                    "fsType": "ext4"
                }
            }
        ]
    }
}