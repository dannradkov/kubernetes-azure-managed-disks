{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "labels": {
            "name": "storage"
        },
        "name": "pod-uses-managed-slow"
    },
    "spec": {
        "containers": [
            {
                "command": [
                    "/bin/sh",
                    "-c",
                    "while true; do echo $(date) >> /mnt/managed/outfile; sleep 1; done"
                ],
                "image": "busybox",
                "name": "az-c-01",
                "volumeMounts": [
                    {
                        "mountPath": "/mnt/managed",
                        "name": "managed01"
                    }
                ]
            }
        ],
        "nodeSelector": {
            "disktype": "managed"
        },
        "volumes": [
            {
                "name": "managed01",
                "persistentVolumeClaim": {
                    "claimName": "dd-managed-slow-01"
                }
            }
        ]
    }
}
