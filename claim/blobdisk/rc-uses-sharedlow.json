{
    "apiVersion": "v1",
    "kind": "ReplicationController",
    "metadata": {
        "labels": {
            "app": "test-app-01"
        },
        "name": "rc-shared-blob-slow-01"
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "app": "pod-blob-shared-slow-01"
        },
        "template": {
            "metadata": {
                "labels": {
                    "app": "pod-blob-shared-slow-01"
                }
            },
            "spec": {
                "containers": [
                    {
                        "command": [
                            "/bin/sh",
                            "-c",
                            "while true; do echo $(date) >> /mnt/blobdisk/outfile; sleep 1; done"
                        ],
                        "image": "busybox",
                        "name": "az-c-01",
                        "volumeMounts": [
                            {
                                "mountPath": "/mnt/blobdisk",
                                "name": "blobdisk01"
                            }
                        ]
                    }
                ],
                "nodeSelector": {
                    "disktype": "blob"
                },
                "volumes": [
                    {
                        "name": "blobdisk01",
                        "persistentVolumeClaim": {
                            "claimName": "pv-dd-shared-slow-01"
                        }
                    }
                ]
            }
        }
    }
}
