{
    "kind": "PersistentVolume",
    "apiVersion": "v1",
    "metadata": {
        "name": "pv-md-standalone-01",
        "volume.beta.kubernetes.io/storage-class": "fast"
    },
    "spec": {
        "capacity": {
            "storage": "128Gi"
        },
        "accessModes": [
            "ReadWriteOnce"
        ],
        "azureManagedDisk": {
            "diskName": "diskone",
            "storageAccountType": "Premium_LRS"
        }
    }
}